---
dockerfile: |
  FROM nazarethcollege/baseimage:2020.11.05 as base  

  RUN apt-get update && apt-get install -y \
      sudo \
      ant \
      default-jdk \
      python3-venv \
      gcc \
      python3-pip

  ENTRYPOINT ["/docker/entrypoint"]

image:
  repository: naz/templated-yaml
  tag: v1-dev

name: templated-yaml
hostname: templated-yaml

volumes:
  - ../:/workspace
  - ~/.ssh:/ssh
